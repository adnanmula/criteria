{
    "name": "adnanmula/criteria",
    "description": "",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Adnan Mula",
            "email": "adnan.mula.bakkar@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "doctrine/dbal": "^3.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^7.0",
        "phpro/grumphp": "^2.5",
        "adnanmula/coding-standard": "^0.0.13",
        "phpunit/phpunit": "^12.0",
        "infection/infection": "^0.31.1"
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts",
            "rm -rf .git/hooks",
            "cp -r scripts/git-hooks .git/hooks"
        ]
    },
    "autoload": {
        "psr-4": {
            "AdnanMula\\Criteria\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdnanMula\\Criteria\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true,
            "infection/extension-installer": true
        }
    }
}
